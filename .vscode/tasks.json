{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--features", 
                "icon"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo build release",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--release",
                "--features", 
                "icon"
            ],
            "group": "build",
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}